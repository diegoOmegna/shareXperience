
<div class="container col-8">
<div class="card-group">
  <div class="card">
    <img src="https://images.unsplash.com/photo-1651133806650-a61eef0a8fdb?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2340&q=80" class="card-img-top" alt="...">
    <div class="card-body">
      <div class="listing-title">
          <h3><strong><%= @listing.title %></strong></h3>
          <p><%= @listing.details %></p>
        </div>
      <p><strong>Reviews</strong></p>
  <ul class="list-group">
    <% @listing.reviews.each do |review| %>
      <li class="list-group-item"><%= review.content %></li>
       <li class="list-group-item"><%= review.rating %></li>
    <% end %>
  </ul>
  <br>

    </div>
    <div class="card-footer">
      <div class="flex-col mt-3" >
        <div class="btn btn-flat mb-2">
    <%= link_to "Go back", listings_path  %>
        </div>
        <div class="btn btn-flat mb-2">
    <%= link_to "Edit", edit_listing_path %>
        </div>
        <div class="btn btn-flat mb-2">
    <%= link_to "Delete Xperience ", @listing, :method => :delete %>
       </div>
        <div class="btn btn-flat mb-2">
    <%= link_to "Book this Xperience", new_booking_path(listing_id: @listing) %>
       </div>
        <div class="btn btn-flat mb-2">
     <%= link_to "My bookings", bookings_path(listing_id: @listing) %>
       </div>
       <div class="btn btn-outline-success mb-2">
     <%= link_to "My Xperience Bookings",  listing_bookings_path(listing_id: @listing) %>
       </div>
    </div>
  </div>
</div>
</div>
</div>

<div style="width: 400px; height: 400px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
